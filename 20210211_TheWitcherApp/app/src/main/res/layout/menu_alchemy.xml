<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/witcher_background2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="50dp"
            android:layout_gravity="center"
            android:src="@drawable/image_witcher_3_logo"
            android:contentDescription="TODO">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/rodona1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/rodona">
                </TextView>
                <TextView
                    android:id="@+id/rodona2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rodona">
                </TextView>
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:padding="20dp"
                    android:src="@drawable/logo_bestiary">
                </ImageView>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">
                </Button>
            </RelativeLayout>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALCHEMY"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_gravity="center"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOMBS,OILS AND POTIONS"
                android:textColor="@color/gris_menu_desc"
                android:textSize="15dp"
                android:layout_gravity="center"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="136dp"
            android:layout_height="wrap_content">
            <!--ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/arrow"
                android:rotation="180"
                android:padding="10dp">
            </ImageView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:visibility="invisible">
            </Button-->
        </RelativeLayout>

    <LinearLayout
        android:layout_width="136dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/rodona"
                android:padding="20dp"
                android:layout_marginLeft="24dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/rodona_seleccionada"
                android:padding="20dp"
                android:layout_marginLeft="24dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="136dp"
        android:layout_height="match_parent">
    </LinearLayout>
    </LinearLayout>
</LinearLayout>